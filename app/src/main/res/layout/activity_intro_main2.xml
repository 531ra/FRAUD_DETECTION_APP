<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="#26292D"
    android:layout_height="match_parent"
    tools:context=".introMainActivity2">
    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
       android:background="#01070e"
        android:layout_height="220dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/hacker"
        app:layout_constraintVertical_bias="0.08"
        android:adjustViewBounds="true"
        />
    <TextView
        android:id="@+id/text"
        app:layout_constraintTop_toBottomOf="@+id/img"
        app:layout_constraintRight_toRightOf="@+id/img"
        app:layout_constraintLeft_toLeftOf="@+id/img"

        android:layout_marginTop="70dp"
        android:layout_margin="20dp"
        android:text="Welcome to Fraud SMS Detector! Protect yourself from scam messages with real-time detection and instant alerts. Our app uses advanced algorithms to analyze SMS content and sender information, ensuring your privacy and security. Stay safe and enjoy peace of mind with Fraud SMS Detector."
        android:textSize="21dp"
        app:layout_constraintBottom_toTopOf="@+id/btn1"
        android:gravity="center"
        android:textColor="#ffff"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        />
    <Button
        android:layout_width="200dp"
        android:padding="20dp"
        android:id="@+id/btn1"
        android:text="NEXT"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#ffff"

        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text"
        app:layout_constraintRight_toRightOf="@+id/text"
        app:layout_constraintLeft_toLeftOf="@+id/text"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="#553A3A"

    />

</androidx.constraintlayout.widget.ConstraintLayout>